{
  "name": "stand-bots",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "heroku-postbuild": "npm run now-build",
    "now-build": "npm run build:typescript",
    "deploy:stage": "now --local-config=now-stage.json",
    "build:typescript": "tsc",
    "tslint": "tslint src/**/*.ts",
    "db:migrate": "sequelize db:migrate",
    "dev:telegram": "onchange \"src/**/*.ts\" -v -i -p -- node -r ts-node/register --inspect=127.0.0.1:9229 src/bots/telegram.ts",
    "dev:viber": "onchange \"src/**/*.ts\" -v -i -p -- node -r ts-node/register --inspect=127.0.0.1:9229 src/bots/viber.ts",
    "dev": "onchange \"src/**/*.ts\" -v -i -p -- node -r ts-node/register --inspect=127.0.0.1:9229 src/app-dev.ts",
    "start": "pm2 start ecosystem.config.js --no-daemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "8.9.0"
  },
  "dependencies": {
    "@types/delay": "^2.0.1",
    "@types/luxon": "^0.5.1",
    "@types/mixpanel": "^2.14.0",
    "@types/node": "^9.6.5",
    "@types/node-fetch": "^1.6.8",
    "@types/node-json-db": "0.0.1",
    "@types/node-telegram-bot-api": "^0.28.2",
    "@types/sequelize": "^4.27.14",
    "delay": "^2.0.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "full-icu": "^1.2.1",
    "luxon": "^1.0.0",
    "mixpanel": "^0.9.1",
    "node-fetch": "^2.1.2",
    "node-telegram-bot-api": "^0.30.0",
    "pg": "^7.4.1",
    "pm2": "^2.10.2",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^4.37.6",
    "sequelize-cli": "^4.0.0",
    "sequelize-typescript": "^0.6.3",
    "ts-node": "^5.0.1",
    "typescript": "^2.8.1",
    "viber-bot": "^1.0.13"
  },
  "devDependencies": {
    "tslint": "^5.9.1",
    "onchange": "^3.3.0"
  }
}
