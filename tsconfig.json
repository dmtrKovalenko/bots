{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false,
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowJs": true
  },
  "paths": {
    "*": [
      "./typings/*"
    ]
  },
  "include": [
    "src/**/*",
    "./typings.d.ts"
  ]
}
