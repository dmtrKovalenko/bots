{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "typeRoots": [ "./node_modules/@types", "./typings.d.ts" ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*"
  ]
}
